<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/exit_button"
        android:layout_width="28sp"
        android:layout_height="28sp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_baseline_clear_24px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/main_edit_text"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="top|left"
        android:hint="What's on your mind? Seek for advice from the community."
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:maxLength="280"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_icon"
        app:layout_constraintTop_toBottomOf="@+id/post_button" />

    <TextView
        android:id="@+id/tags_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:text="Tags:"
        android:theme="@style/boldFont"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_edit_text" />

    <Button
        android:id="@+id/post_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="POST"
        android:theme="@style/boldFont"
        android:textColor="#F5A67E"
        android:textColorLink="#F5A67E"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/depressionTag"
        android:layout_width="92dp"
        android:layout_height="28dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/tag_checkbox"
        android:button="@android:color/transparent"
        android:checked="false"
        android:duplicateParentState="false"
        android:gravity="center"
        android:text="Depression"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toEndOf="@+id/anxietyTag"
        app:layout_constraintTop_toBottomOf="@+id/tags_header" />

    <CheckBox
        android:id="@+id/anxietyTag"
        android:layout_width="72dp"
        android:layout_height="28dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/tag_checkbox"
        android:button="@android:color/transparent"
        android:checked="false"
        android:duplicateParentState="false"
        android:gravity="center"
        android:text="Anxiety"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toEndOf="@+id/stressTag"
        app:layout_constraintTop_toBottomOf="@+id/tags_header" />

    <CheckBox
        android:id="@+id/sleepTag"
        android:layout_width="64dp"
        android:layout_height="28dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/tag_checkbox"
        android:button="@android:color/transparent"
        android:checked="false"
        android:duplicateParentState="false"
        android:gravity="center"
        android:text="Sleep"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toEndOf="@+id/eatingTag"
        app:layout_constraintTop_toBottomOf="@+id/anxietyTag" />

    <CheckBox
        android:id="@+id/eatingTag"
        android:layout_width="73dp"
        android:layout_height="28dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/tag_checkbox"
        android:button="@android:color/transparent"
        android:checked="false"
        android:duplicateParentState="false"
        android:gravity="center"
        android:onClick="onCheckBoxClicked"
        android:text="Eating"
        app:layout_constraintStart_toEndOf="@+id/ptsdTag"
        app:layout_constraintTop_toBottomOf="@+id/anxietyTag" />

    <CheckBox
        android:id="@+id/generalTag"
        android:layout_width="76dp"
        android:layout_height="28dp"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/tag_checkbox"
        android:button="@android:color/transparent"
        android:checked="false"
        android:duplicateParentState="false"
        android:gravity="center"
        android:text="General"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ptsdTag" />

    <CheckBox
        android:id="@+id/otherTag"
        android:layout_width="64dp"
        android:layout_height="28dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/tag_checkbox"
        android:button="@android:color/transparent"
        android:checked="false"
        android:duplicateParentState="false"
        android:gravity="center"
        android:text="Other"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toEndOf="@+id/generalTag"
        app:layout_constraintTop_toBottomOf="@+id/ptsdTag" />

    <CheckBox
        android:id="@+id/ptsdTag"
        android:layout_width="64dp"
        android:layout_height="28dp"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/tag_checkbox"
        android:button="@android:color/transparent"
        android:checked="false"
        android:duplicateParentState="false"
        android:gravity="center"
        android:text="PTSD"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stressTag" />

    <CheckBox
        android:id="@+id/stressTag"
        android:layout_width="68dp"
        android:layout_height="28dp"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/tag_checkbox"
        android:button="@android:color/transparent"
        android:checked="false"
        android:duplicateParentState="false"
        android:gravity="center"
        android:text="Stress"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tags_header" />

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exit_button"
        app:srcCompat="@mipmap/llama_icon_round" />

</android.support.constraint.ConstraintLayout>